<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="Lionheart Remake Editor">
         <property
               name="applicationCSS"
               value="platform:/plugin/com.b3dgs.lionheart.editor/css/default.css">
         </property>
         <property
               name="appName"
               value="Lionheart Remake Editor">
         </property>
         <property
               name="lifeCycleURI"
               value="bundleclass://com.b3dgs.lionengine.editor/com.b3dgs.lionengine.editor.Manager">
         </property>
         <property
               name="applicationXMI"
               value="platform:/plugin/com.b3dgs.lionengine.editor/Application.e4xmi">
         </property>
      </product>
   </extension>
   <extension
         id="com.b3dgs.lioheart.editor.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            apply="always"
            uri="fragment.e4xmi">
      </fragment>
      <processor
            apply="always"
            beforefragment="false"
            class="com.b3dgs.lionheart.editor.ApplicationConfiguration">
      </processor>
   </extension>
   <extension
         id="com.b3dgs.lionheart.worldViewRenderer"
         name="World View Renderer"
         point="com.b3dgs.lionengine.editor.worldViewRenderer">
      <implementation
            renderer="com.b3dgs.lionheart.editor.WorldViewRenderer">
      </implementation>
   </extension>
   <extension
         id="com.b3dgs.lionheart.properties"
         name="Properties"
         point="com.b3dgs.lionengine.editor.properties">
      <implementation
            properties="com.b3dgs.lionheart.editor.PropertiesPart">
      </implementation>
   </extension>
</plugin>
